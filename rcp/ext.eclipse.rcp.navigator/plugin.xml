<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.navigator.navigatorContent">
      <navigatorContent
            activeByDefault="true"
            contentProvider="org.eclipse.ui.model.WorkbenchContentProvider"
            id="ext.eclipse.rcp.navigator.resourceContent"
            labelProvider="org.eclipse.ui.model.WorkbenchLabelProvider"
            name="%ext.resourceContent"
            priority="normal">
         <triggerPoints>
            <or>
               <instanceof
                     value="org.eclipse.core.resources.IResource">
               </instanceof>
            </or></triggerPoints>
         <possibleChildren>
            <or>
               <instanceof
                     value="org.eclipse.core.resources.IResource">
               </instanceof>
            </or>
         </possibleChildren>
      </navigatorContent>
   </extension>
   <extension
         point="org.eclipse.ui.navigator.viewer">
      <viewerContentBinding
            viewerId="ext.eclipse.rcp.navigator">
         <includes>
            <contentExtension
                  pattern="org.eclipse.ui.navigator.resourceContent">
            </contentExtension>
            <contentExtension
                  pattern="ext.eclipse.rcp.navigator.resourceContent">
            </contentExtension>
            <contentExtension
                  pattern="org.eclipse.ui.navigator.resources.filters.*">
            </contentExtension>
         </includes>
      </viewerContentBinding>
      <viewerActionBinding
            viewerId="ext.eclipse.rcp.navigator">
         <includes>
            <actionExtension
                  pattern="org.eclipse.ui.navigator.resources.*">
            </actionExtension>
         </includes>
      </viewerActionBinding>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            allowMultiple="false"
            class="org.eclipse.ui.navigator.CommonNavigator"
            id="ext.eclipse.rcp.navigator"
            name="%ExtNavigator.name"
            restorable="true">
         <description>
            description body text
         </description>
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="ext.eclipse.rcp.app.perspective">
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.startup">
      <startup
            class="ext.eclipse.rcp.navigator.ExtNaviStarter">
      </startup>
   </extension>
   <extension
         id="extProject"
         point="org.eclipse.core.resources.natures">
      <runtime>
         <run
               class="ext.eclipse.rcp.navigator.nature.ExtProjectNature">
         </run>
      </runtime>
   </extension>
   <extension
         point="org.eclipse.ui.ide.projectNatureImages">
      <image
            icon="icons/extProject.gif"
            id="ext.eclipse.rcp.navigator.extProject"
            natureId="ext.eclipse.rcp.navigator.extProject">
      </image>
   </extension>
   <extension
         point="org.eclipse.ui.newWizards">
   </extension>

</plugin>
